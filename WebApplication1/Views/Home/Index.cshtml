    <header class="hero">

        <div class="hero-container">
            <h1>O seu problema também é nosso problema</h1>
            <a href="#" class="btn-work">View Work</a>
            <a href="#" class="btn-contact">Contact Me</a>

        </div>

    </header>

   
        <div class="mapa">

            <div id="mapid"></div>

            <div class="formulario">
                <h1>Relatar Incidente</h1>
                <form id="form-adicionar">
                    <input type="text" name="nome" placeholder="Informe seu Nome" />
                    <input type="text" name="cpf" placeholder="Informe seu CPF" />
                    <input type="text" name="telefone" placeholder="Informe seu Telefone" />
                    <select id="tipoproblema" placeholder="Tipo do problema" />
                    <option id="tipoproblema"></option>
                    <option value="1">Policiamento</option>
                    <option value="2">Primeiro Socorros</option>
                    <option value="3">Obras na Pista</option>
                    <option value="4">Acidente</option>
                    <option value="5">Acidente Ambiental</option>
                    <option value="6">Àrea de Risco</option>
                    <option value="7">Saneamento</option>
                    </select>
                    <textarea name="observacoes" placeholder="Informe suas observações"></textarea>
                    <input type="submit" id="adicionar-servico" value="Adicionar" />
                </form>
            </div>



        </div>
        <script src="https://unpkg.com/leaflet@1.3.4/dist/leaflet.js"
